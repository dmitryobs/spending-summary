<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.AddStatisticAttributes">

    <TextView
        android:id="@+id/statisticFieldTextID"
        android:layout_width="174dp"
        android:layout_height="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/incomeList"
        android:layout_width="170dp"
        android:layout_height="458dp"
        android:layout_marginEnd="2dp"
        android:background="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/finishCreatingWindowButton"
        app:layout_constraintEnd_toStartOf="@+id/expenseList"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/expenseList"
        android:layout_width="170dp"
        android:layout_height="458dp"
        android:layout_marginStart="2dp"
        android:background="#F44336"
        app:layout_constraintBottom_toTopOf="@+id/finishCreatingWindowButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/incomeList" />

    <Button
        android:id="@+id/addFieldButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:onClick="onAddIncomeButtonClick"
        android:text="@string/addText"
        app:layout_constraintBottom_toTopOf="@+id/expenseList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statisticFieldTextID"
        app:layout_constraintVertical_bias="0.235" />

    <EditText
        android:id="@+id/enterIncomeExpenseFieldText"
        android:layout_width="151dp"
        android:layout_height="48dp"
        android:layout_marginTop="26dp"
        android:focusable="true"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/incomeList"
        app:layout_constraintEnd_toStartOf="@+id/addFieldButton"
        app:layout_constraintTop_toBottomOf="@+id/statisticFieldTextID"
        app:layout_constraintVertical_bias="0.235"
        tools:ignore="MissingConstraints" />

    <ToggleButton
        android:id="@+id/incomeExpensetoggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="#E35349"
        android:onClick="onToggleButtonClick"
        android:text="ToggleButton"
        android:textOff="@string/incomeText"
        android:textOn="@string/expenseText"
        app:layout_constraintBottom_toTopOf="@+id/incomeList"
        app:layout_constraintEnd_toStartOf="@+id/enterIncomeExpenseFieldText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statisticFieldTextID"
        app:layout_constraintVertical_bias="0.235" />

    <Button
        android:id="@+id/finishCreatingWindowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="13dp"
        android:text="@string/finishText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>